â•‘  ğŸ“… {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}               â•‘
â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    """
    print(banner)


async def main():
    """Ğ“Ğ»Ğ°Ğ²Ğ½Ğ°Ñ Ñ„ÑƒĞ½ĞºÑ†Ğ¸Ñ"""
    bot = None

    try:
        print_banner()

        logger.info("ğŸš€ Ğ¡Ğ¾Ğ·Ğ´Ğ°Ğ½Ğ¸Ğµ ÑĞºĞ·ĞµĞ¼Ğ¿Ğ»ÑÑ€Ğ° Ğ±Ğ¾Ñ‚Ğ°...")
        bot = GIOCryptoBot()

        logger.info("ğŸ”§ Ğ˜Ğ½Ğ¸Ñ†Ğ¸Ğ°Ğ»Ğ¸Ğ·Ğ°Ñ†Ğ¸Ñ Ğ±Ğ¾Ñ‚Ğ°...")
        await bot.initialize()

        logger.info("â–¶ï¸ Ğ—Ğ°Ğ¿ÑƒÑĞº Ğ±Ğ¾Ñ‚Ğ°...")
        await bot.run()

    except KeyboardInterrupt:
        logger.info(f"\n{Colors.WARNING}âš ï¸ ĞŸĞ¾Ğ»ÑƒÑ‡ĞµĞ½ ÑĞ¸Ğ³Ğ½Ğ°Ğ» Ğ¾ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ¸ (Ctrl+C){Colors.ENDC}")
    except Exception as e:
        logger.error(f"{Colors.FAIL}âŒ ĞšÑ€Ğ¸Ñ‚Ğ¸Ñ‡ĞµÑĞºĞ°Ñ Ğ¾ÑˆĞ¸Ğ±ĞºĞ°: {e}{Colors.ENDC}")
        import traceback
        traceback.print_exc()
    finally:
        if bot:
            try:
                await asyncio.wait_for(bot.shutdown(), timeout=10.0)
            except asyncio.TimeoutError:
                logger.warning("âš ï¸ ĞŸÑ€ĞµĞ²Ñ‹ÑˆĞµĞ½Ğ¾ Ğ²Ñ€ĞµĞ¼Ñ Ğ¾Ğ¶Ğ¸Ğ´Ğ°Ğ½Ğ¸Ñ Ğ¾ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ¸")
            except Exception as e:
                logger.error(f"âŒ ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ğ¾ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ: {e}")

        logger.info(f"{Colors.OKBLUE}ğŸ‘‹ GIO Crypto Bot Ğ·Ğ°Ğ²ĞµÑ€ÑˆÑ‘Ğ½{Colors.ENDC}")


if __name__ == "__main__":
    try:
        # Ğ”Ğ»Ñ Windows
        if sys.platform == "win32":
            asyncio.set_event_loop_policy(asyncio.WindowsProactorEventLoopPolicy())

        asyncio.run(main())

    except KeyboardInterrupt:
        print(f"\n{Colors.WARNING}âš ï¸ ĞÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ°...{Colors.ENDC}")
    except Exception as e:
        print(f"{Colors.FAIL}âŒ ĞĞµĞ¾Ğ¶Ğ¸Ğ´Ğ°Ğ½Ğ½Ğ°Ñ Ğ¾ÑˆĞ¸Ğ±ĞºĞ°: {e}{Colors.ENDC}")
        import traceback
        traceback.print_exc()
        sys.exit(1)









